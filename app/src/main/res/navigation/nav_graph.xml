<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.bike_computer.FirstFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_StartFragment"
            app:destination="@id/StartFragment" />
    </fragment>
    <fragment
        android:id="@+id/StartFragment"
        android:name="com.example.bike_computer.SecondFragment"
        android:label="@string/start_fragment_label"
        tools:layout="@layout/fragment_start">

        <action
            android:id="@+id/action_StartFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.bike_computer.SecondFragment"
        android:label="@string/start_fragment_label"
        tools:layout="@layout/fragment_start" />

    <fragment
        android:id="@+id/trainingFragment"
        android:name="com.example.bike_computer.TrainingFragment"
        android:label="@string/training_fragment_label"
        tools:layout="@layout/fragment_training" />

    <fragment
        android:id="@+id/kompassFragment"
        android:name="com.example.bike_computer.KompassFragment"
        android:label="@string/kompass_fragment_label"
        tools:layout="@layout/fragment_kompass" />

</navigation>