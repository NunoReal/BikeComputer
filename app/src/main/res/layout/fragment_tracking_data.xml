<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <include
                layout="@layout/card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                layout="@layout/card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <include
                android:id="@+id/card_altitude"
                layout="@layout/card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/card_elevation_gain"
                layout="@layout/card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <Chronometer
            android:id="@+id/tracking_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="28dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <include
                android:id="@+id/card_latitude"
                layout="@layout/card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/card_longitude"
                layout="@layout/card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pause_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text=""
            app:icon="@drawable/icon_pause"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="32dp"
        app:iconTint="#FFFFFF"
        app:backgroundTint="#2196F3"
        app:shapeAppearanceOverlay="@style/CircularButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/stop_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text=""
            app:icon="@drawable/icon_stop"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconSize="32dp"

        app:iconTint="#FFFFFF"
        app:backgroundTint="#F44336"
        app:shapeAppearanceOverlay="@style/CircularButton" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
